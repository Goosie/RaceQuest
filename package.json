{
  "name": "grounded-monorepo",
  "version": "1.0.0",
  "description": "Grounded/RaceQuest - Bitcoin-native location-based team challenges",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/racequest",
    "dev:partners": "npm run dev --workspace=apps/partners",
    "build": "npm run build --workspaces --if-present",
    "build:racequest": "npm run build --workspace=apps/racequest",
    "build:partners": "npm run build --workspace=apps/partners",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "cap:sync": "npm run cap:sync --workspace=apps/racequest",
    "cap:run:android": "npm run cap:run:android --workspace=apps/racequest",
    "cap:build:android": "npm run cap:build:android --workspace=apps/racequest"
  },
  "keywords": [
    "bitcoin",
    "lightning",
    "nostr",
    "rgb",
    "geolocation",
    "nfc",
    "react",
    "capacitor",
    "typescript"
  ],
  "author": "Grounded Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}